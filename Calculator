def add (a,b):
    return a+b
def subtract (a,b):
    return a-b
def multiply(a,b):
    return a*b
def divide(a,b):
    return a//b
while(1):
    a=int(input("enter the 1st number :"))
    b=int(input("enter the 2nd number :"))
    c=int(input("press 1 for add\npress2 for subtracr\npress 3 for multiply\npress 4 for divide"))
    if(c==1):
        print(add(a,b))
    elif(c==2):
        print(subtract(a,b))
    elif(c==3):
        print(multiply(a,b))
    elif(c==4):
        print(divide(a,b))
    else:
        print("invalid input")
    choice=input("if you want to continue press again")
    if(choice=="again"):
        continue
    else:
        break
